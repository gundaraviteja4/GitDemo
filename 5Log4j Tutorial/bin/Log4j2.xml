<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT"> <!-- logging to console, if we want to log to file then LogToFile -->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="LogToFile" fileName="D:\selenium\Log4jlogfile.txt">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    
    <Loggers>
		<!-- avoid duplicated logs with additivity=false -->
        
        <Logger name="pack2.Test2" level="error" additivity="false">
            <AppenderRef ref="LogToConsole"/>
            <AppenderRef ref="LogToFile"/>
        </Logger>  <!-- if we want to display only error messages for specific package then see the Logger section above-->
        <Logger name="pack1.Test1" level="trace" additivity="false">
            <AppenderRef ref="LogToFile"/>
        </Logger> 
        <Root level="trace"> <!-- what to log, if it is trace it will log total output and if it is error it will log only errors -->
            <AppenderRef ref="LogToConsole"/>
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>